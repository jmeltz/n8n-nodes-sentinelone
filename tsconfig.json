{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2019",
		"lib": ["es2019"],
		"declaration": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"outDir": "./dist",
		"rootDir": "."
	},
	"include": [
		"nodes/**/*",
		"credentials/**/*"
	],
	"exclude": [
		"node_modules/**/*"
	]
}
